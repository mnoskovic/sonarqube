{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "name": {
      "type": "string",
      "minLength": 5,
      "maxLength": 50,
      "metadata": {
        "description": "Name of your Azure Container Registry"
      }
    },
    "adminUserEnabled": {
      "type": "bool",
      "defaultValue": true,
      "metadata": {
        "description": "Enable admin user that have push / pull permission to the registry."
      }
    },
    "registrySkuName": {
      "type": "string",
      "metadata": {
        "description": "Azure Container Registry SKU name."
      },
      "defaultValue": "Standard",
      "allowedValues": [
        "Standard"
      ]
    },
    "registrySkuTier": {
      "type": "string",
      "metadata": {
        "description": "Azure Container Registry tier."
      },
      "defaultValue": "Managed",
      "allowedValues": [
        "Managed"
      ]
    },
    "storageType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_ZRS",
        "Standard_GRS"
      ],
      "metadata": {
        "description": "Type of the storage account that will store container registry datas."
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    }
  },
  "variables": {
    "storageAccountName": "[concat(tolower(parameters('name')))]",
    "storageAccountId": "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]",

    "true": true
  },
  "resources": [
    {
      "name": "[variables('storageAccountName')]",
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2018-02-01",
      "location": "[parameters('location')]",

      "kind": "Storage",
      "sku": {
        "name": "Standard_LRS",
        "tier": "Standard"
      },
      "comments": "This storage account is used by Container Registry for storing its datas.",
      "dependsOn": [],
      "tags": {
        "displayName": "settings storage"
      },
      "properties": {
        "accountType": "[parameters('storageType')]"
      }
    },

    {
      "name": "[parameters('name')]",
      "type": "Microsoft.ContainerRegistry/registries",
      "apiVersion": "2017-10-01",
      "location": "[parameters('location')]",
      "tags": {
        "displayName": "Container Registry",
        "container.registry": "[parameters('name')]"
      },
      "sku": {
        "name": "[parameters('registrySkuName')]",
        "tier": "[parameters('registrySkuTier')]"
      },
      "properties": {
        "adminUserEnabled": "[parameters('adminUserEnabled')]"
      }
    }
  ],
  "outputs": {
    "loginServer": {
      "value": "[reference(resourceId('Microsoft.ContainerRegistry/registries',parameters('name'))).loginServer]",
      "type": "string"
    },
    "username": {

      "value": "[parameters('name')]",
      "type": "string"
    },

    "password": {
      "value": "[if(equals(parameters('adminUserEnabled'),variables('true')),listCredentials(resourceId('Microsoft.ContainerRegistry/registries',      parameters('name')),      '2017-03-01').passwords[0].value,'')]",
      "type": "string"
    }
  }
}
